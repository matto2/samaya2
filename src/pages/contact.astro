---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <form
    name="contact"
    netlify
    class="px-6 py-2 md:px-12 rounded-3xl max-w-4xl mx-auto md:mt-12 mb-16"
  >
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>
    <h3 class="text-2xl font-semibold text-brand-accent mb-2 pt-0">
      Contact Us
    </h3>
    <p class="mb-6">
      Feel free to reach out with any questions about scheduling or our
      services!
    </p>
    <!-- Name Input -->
    <div class="flex flex-col mb-6">
      <label for="name" class="text-text-dark font-semibold mb-2">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="border border-text-text-medium rounded-lg p-3 focus:ring-2 focus:ring-[#cc926a] focus:outline-none"
        placeholder="Your Name"
        required
      />
    </div>

    <!-- Email Input -->
    <div class="flex flex-col mb-6">
      <label for="email" class="text-text-dark font-semibold mb-2">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        class="border border-text-text-medium rounded-lg p-3 focus:ring-2 focus:ring-[#cc926a] focus:outline-none"
        placeholder="Your Email"
        required
      />
    </div>

    <!-- Message Input -->
    <div class="flex flex-col">
      <label for="message" class="text-text-dark font-semibold mb-2"
        >Message</label
      >
      <textarea
        name="message"
        id="message"
        rows="5"
        class="border border-text-text-medium rounded-lg p-3 focus:ring-2 focus:ring-[#cc926a] focus:outline-none"
        resize-none"
        placeholder="Your Message"
        required
      >
      </textarea>
    </div>

    <!-- Submit Button -->
    <div class="text-center md:text-left mt-6">
      <button
        type="submit"
        class="bg-brand-accent text-text-light text-lg px-6 py-2 rounded-xl shadow-lg cursor-pointer hover:bg-brand-dark transition
    md:w-64 w-full focus:ring-2 focus:ring-[#cc926a] font-semibold focus:outline-none"
      >
        Send
      </button>
    </div>
  </form>
</Layout>
